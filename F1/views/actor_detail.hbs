           <h4>Nationality:</h4>{{actor.act_nat}}<br><br>
           <h4>Awards:</h4>{{actor.act_awards}}<br><br>
         <!--  <h4>Thumbnail:</h4>{{director.dir_thumb}}<br><br><br>-->
           
           <a href="{{actor.url}}/update"><i class="fa fa-pencil-square-o"></i>Update</a>
           <form action="{{actor.url}}/delete" method="post" name="deleteform">
           <input class="form-control" id="id" type="hidden" name="id" required="true" , value={{actor._id}}> </input>
           <button type="button" class="delete-btn" onclick="myconfirm()"><i class="fa fa-trash"></i> delete</button>
           </form>
           <br>
           <br>
            
        </div>
