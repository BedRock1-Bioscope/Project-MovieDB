input[type="radio"] {
     position: absolute;
     opacity: 0;
     z-index: -1;
}
 label {
     position: relative;
     margin-right: 1em;
     padding-left: 2em;
     padding-right: 1em;
     line-height: 2;
     cursor: pointer;
}
 label:before {
     box-sizing: border-box;
     content: " ";
     position: absolute;
     top: 0.3em;
     left: 0;
     display: block;
     width: 1.4em;
     height: 1.4em;
     /*border: 2px solid rgb(41, 27, 160);*/
     border: 3px solid #FF6A00;
     border-radius: 0.25em;
     z-index: -1;
}
 input[type="radio"] + label::before {
     border-radius: 1em;
}
/* Checked */
 input[type="radio"]:checked + label {
     padding-left: 1em;
     color: white;
}
 input[type="radio"]:checked + label:before {
     top: 0;
     width: 100%;
     height: 2em;
     /*background: rgb(247, 5, 5);*/
     background:#FF6A00;
}
/* Transition */
 label, label::before {
     -webkit-transition: 0.25s all ease;
     -o-transition: 0.25s all ease;
     transition: 0.25s all ease;
}
 
